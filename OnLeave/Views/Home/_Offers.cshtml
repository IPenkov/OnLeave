@model List<OnLeave.Models.BusinessEntities.Offer>

<div class="product-list">
    <ul>
        @for (int i = 0; i < Model.Count; i++)
        {
            <li>
                <div class="offer-details" style="width: 200px">
                    <div class="price-details">
                        <span class="price-new">-@Model[i].Discount%</span>
                        
                        <span class="price-tax">
                            @( Model[i].StartDate.HasValue ? string.Format("от {0}", Model[i].StartDate.Value.ToString("dd/MM/yyyy")): "")
                            @( Model[i].EndDate.HasValue ? string.Format("до {0}", @Model[i].EndDate.Value.ToString("dd/MM/yyyy")): "")
                        </span>
                    </div>
                </div>
                <div class="offer-description">
                    <div class="description">@Model[i].Description</div>
                </div>
            </li>
        }        
    </ul>
</div>

