@model OnLeave.Models.ResetPasswordModel

@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumb">
    @Html.ActionLink("Home", "Index", "Home")
    » @Html.ActionLink("Account", "Login", "Account")
    » @Html.ActionLink("Reset Password", "ResetPassword", "Account", new { @class = "last" })
</div>
<h1>Reset Password?</h1>
<div class="box-container">
    <div class="account-forgotten">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { id = "forgotten" }))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary()
            
            @Html.HiddenFor(m => m.ReturnToken)
            
            @Html.HiddenFor(m => m.Email);

            <p>Enter the e-mail address associated with your account. Click continue to have your password e-mailed to you.</p>
            <h2>Your E-Mail Address</h2>
            <div class="content">
                <table class="form">
                    <tbody>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.Password) :</td>
                            <td>
                                <div>
                                    @Html.ValidationMessageFor(m => m.Password)
                                </div>
                                <div class="clear"></div>
                                <div>
                                    @Html.PasswordFor(m => m.Password)
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(m => m.ConfirmPassword) :</td>
                            <td>
                                <div>
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                </div>
                                <div class="clear"></div>
                                <div>
                                    @Html.PasswordFor(m => m.ConfirmPassword)
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="buttons">
                <div class="left"><a href=@Url.Action("Login", "Account") class="button"><span>Back</span></a></div>
                <div class="right">
                    <a onclick="$('#forgotten').submit();" class="button"><span>Continue</span></a>
                </div>
            </div>
        }
    </div>
</div>

