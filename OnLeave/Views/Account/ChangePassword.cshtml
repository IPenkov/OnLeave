@model OnLeave.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section LeftSideBar{
    @{Html.RenderPartial("AccounLeftSideBar", new OnLeave.Models.SearchSystemViewModel());}
}


<div class="breadcrumb">
    @Html.ActionLink("Начало", "Index", "Home")
    » @Html.ActionLink("Профил", "Login", "Account")
    » @Html.ActionLink("Промяна парола", "ChangePassword", "Account", new { @class = "last" })
</div>

<h1>Промяна на парола</h1>
<div class="box-container">

    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "change_password" }))
    {
        @Html.AntiForgeryToken()

        <h2>Нова парола</h2>

        <div class="content">
            <table class="form">
                <tbody>
                    <tr>
                        <td>
                            <span class="required">*</span>
                            @Html.LabelFor(m => m.Password):
                        </td>
                        <td>
                            <div style="float:left">
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                            <div class="clear"></div>
                            <div style="float:left">
                                @Html.TextBoxFor(m => m.Password, new { @class = "q1" })
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <span class="required">*</span>
                            @Html.LabelFor(m => m.ConfirmPassword):
                        </td>
                        <td>
                            <div style="float:left">
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                            <div class="clear"></div>
                            <div style="float:left">
                                @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "q1" })
                            </div>
                        </td>
                    </tr>                    
                </tbody>
            </table>
            <div class="buttons">
                <div class="left">
                    <a class="button" href="@Url.Action("Login", "Account")"><span>Назад</span></a>
                </div>
                <div class="right">
                    <a class="button" onclick="$('#change_password').submit();"><span>Продължи</span></a>
                </div>
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
